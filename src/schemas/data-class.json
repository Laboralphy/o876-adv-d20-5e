{
  "description": "définition d'une classe",
  "type": "object",
  "required": [
    "hitDice",
    "proficiencies"
  ],
  "properties": {
    "hitDice": {
      "description": "Nombre max de pv gagné à chaque niveau",
      "type": "number"
    },
    "proficiencies": {
      "description": "liste des proficiency inhérente à la classe",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^(PROFICIENCY_|weapon-type-|armor-type-|SKILL_)"
      }
    },
    "skills": {
      "description": "liste des compétence de classe",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^SKILL_"
      }
    }
  }
}
