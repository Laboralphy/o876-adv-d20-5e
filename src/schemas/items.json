{
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "DÃ©finition des items",
  "type": "object",
  "definitions": {
    "commonProperties": {
      "$id": "#/definitions/commonProperties",
      "type": "object",
      "required": [
        "entityType",
        "itemType",
        "properties"
      ],
      "properties": {
        "entityType": {
          "type": "string",
          "const": "ENTITY_TYPE_ITEM"
        },
        "itemType": {
          "type": "string"
        },
        "properties": {
          "type": "array"
        }
      }
    },
    "weaponAttributes": {
      "$id": "#/definitions/weaponAttributes",
      "type": "array",
      "items": [
        {
          "type": "string",
          "pattern": "^WEAPON_ATTRIBUTE_"
        }
      ]
    },
    "itemTypeCreatureweapon": {
      "$id": "#/definitions/itemTypeCreatureweapon",
      "type": "object",
      "required": [
        "damage",
        "damageType"
      ],
      "properties": {
        "damage": {
          "type": "string"
        },
        "damageType": {
          "type": "string",
          "pattern": "^DAMAGE_TYPE_"
        },
        "attributes": {
          "$ref": "#/definitions/weaponAttributes"
        }
      }
    },
    "itemTypeWeapon": {
      "$id": "#/definitions/itemTypeWeapon",
      "type": "object",
      "required": [
        "weaponType"
      ],
      "properties": {
        "weaponType": {
          "type": "string",
          "pattern": "^weapon-type-"
        }
      }
    },
    "itemTypeArmor": {
      "$id": "#/definitions/itemTypeArmor",
      "type": "object",
      "required": [
        "armorType"
      ],
      "properties": {
        "weaponType": {
          "type": "string",
          "pattern": "^armor-type-"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "#/definitions/commonProperties"
    },
    {
      "if": {
        "properties": {
          "itemType": {
            "const": "ITEM_TYPE_WEAPON"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/itemTypeWeapon"
      }
    },
    {
      "if": {
        "properties": {
          "itemType": {
            "const": "ITEM_TYPE_CREATUREWEAPON"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/itemTypeCreatureweapon"
      }
    },
    {
      "if": {
        "properties": {
          "itemType": {
            "const": "ITEM_TYPE_ARMOR"
          }
        }
      },
      "then": {
        "$ref": "#/definitions/itemTypeArmor"
      }
    }
  ]
}